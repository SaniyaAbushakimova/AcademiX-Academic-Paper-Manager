---
const userCookie = Astro.cookies.get("username")
const user = userCookie ? userCookie.value : ""
---
<div class="fixed top-0 left-0 w-40 h-screen z-50 bg-red-600 text-white p-6">
    <h2 class="text-2xl font-bold mb-6">PaperPlex</h2>
    <ul>
        <li class="mb-4"><a href="/" class="hover:text-red-300">Home</a></li>
{user && <li class="mb-4"><a href="/library" class="hover:text-red-200">My Library</a></li>
        <li class="mb-4"><a href="/recentlyviewed" class="hover:text-red-200">Recently Viewed</a></li> }
    </ul>
</div>
